<div class="container-fluid justify-content-between bg-white rounded-3 p-3 mt-3">
    <h5 class="fw-bold">Demográficos de la orden</h5>

    <div class="row mt-2">
        <div class="d-flex justify-content-between gap-5">
            <div class="col-3">

                <div class="d-flex gap-2">
                    <h5 id="numOrdenAdmin" style="font-size:14px;">N° Orden:</h5>
                    <input id="txtNOrdenAdmin" style="height:2rem; width:5rem" class="form-control" disabled type="text" placeholder="Nro. Orden" />
                </div>

                <div class="d-flex mt-4 gap-2">
                    <h5 style="font-size:14px;">Medicamentos:</h5>
                    <textarea id="txtMedicamentoAdmin" pattern="[A-Za-z0-9]" rows="4" style="resize:none; height:4rem" class="form-control" type="text" maxlength="200"></textarea>
                </div>

                <div class="d-flex mt-4 gap-3">
                    <h5 style="font-size:14px;">Tipo cliente:</h5>
                    <select id="selTipClienteAdmin" style="height:2rem; width:10rem; margin-left:0.7rem" class="form-select">
                    </select>
                </div>

            </div>

            <div class="col-4">

                <div class="d-flex gap-2">
                    <h5 style="font-size:14px;">Fecha de Ingreso:</h5>
                    <input id="dptFecIngAdmin" style="height:2rem; width:11rem" disabled class="form-control" type="text" />
                </div>

                <div class="d-flex mt-4 gap-2">
                    <h5 style="font-size:14px;">Diagnóstico:</h5>
                    <textarea id="txtDiagnosticoAdmin" pattern="[A-Za-z0-9]" rows="4" style="resize:none; height:4rem" class="form-control" type="text" maxlength="200"></textarea>
                </div>

                <div class="d-flex mt-4 gap-3">
                    <h5 style="font-size:14px;">Código Laboratorio:</h5>
                    <input id="txtCodLabAdmin" style="height:2rem; margin-left:0.5rem" class="form-control" type="text" placeholder="Código laboratorio" />
                </div>

            </div>

            <div class="col-4">
                <h5 style="font-size:14px;">Observaciones:</h5>
                <textarea id="txtObsOrdAdmin" pattern="[A-Za-z0-9]" rows="4" style="resize:none; height:4rem" class="form-control" type="text" maxlength="200"></textarea>
            </div>

        </div>
    </div>

</div>